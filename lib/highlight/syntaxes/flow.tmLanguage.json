{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "flow",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#path"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flo",
          "match": "\\b(file|lines|sort|deduplicate|unique|asc)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.single.flo",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.flo",
          "match": "\\\\."
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.flo",
          "match": "(:|<>|->|\\|)"
        }
      ]
    },
    "path": {
      "patterns": [
        {
          "name": "variable.other.flo",
          "match": "\\b(path)\\s+('[^']*')"
        }
      ]
    }
  },
  "scopeName": "source.flo"
}