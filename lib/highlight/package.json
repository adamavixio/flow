{
  "name": "flow-language",
  "publisher": "avix",
  "displayName": "Flow Language",
  "description": "Syntax highlighting for Flow scripting language",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamavixio/flow",
    "directory": "lib/highlight"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "flow",
        "aliases": [
          "flow",
          "Flow"
        ],
        "extensions": [
          ".flo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "flow",
        "scopeName": "source.flo",
        "path": "./syntaxes/flo.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "bun vsce package",
    "install": "code --install-extension flow-language-0.0.1.vsix",
    "uninstall": "code --install-extension flow-language"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vscode/vsce": "^3.1.0"
  }
}